<!doctype html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= title || 'Inventory App' %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="/dashboard">Inventory</a>
    <div class="navbar-nav gap-2">
      <a class="nav-link" href="/inventory">Inventory</a>
      <a class="nav-link" href="/production">Produksi</a>
      <a class="nav-link" href="/materials">Bahan Baku</a>
      <a class="nav-link" href="/reports">Laporan</a>
      <a class="nav-link" href="/users">User</a>
    </div>
    <% if (currentUser) { %>
      <form method="post" action="/logout">
        <button class="btn btn-sm btn-outline-light">Logout (<%= currentUser.username %>)</button>
      </form>
    <% } %>
  </div>
</nav>
<main class="container py-4">
  <%- body %>
</main>
<script src="/public/js/app.js"></script>
</body>
</html>
